/* Header CSS */
@import "variables";
@import "mixins";

#header {
	width: 100%;
	@media screen and (min-width: $break-small) {
		background: url('<%= asset_path('backgrounds/small-header.png') %>') no-repeat;
		background-size:100%;
	}
	@media screen and (min-width: $break-medium) {
		background: url('<%= asset_path('backgrounds/medium-header.png') %>') no-repeat;
		background-size:100%;
	}
	@media screen and (min-width: $break-large) {
		background: url('<%= asset_path('backgrounds/large-header.png') %>') no-repeat;
		background-size:100%;
	}
	@media screen and (min-width: $break-xlarge) {
		background: url(<%= asset_path 'backgrounds/xlarge-header.png' %>) no-repeat;
		background-size:100%;
	}

	h1 {
		@include fontSize(20px, 16px);
		@include float(left);

		.home-link {
			text-decoration: none;
			color: #000;
		}
	}
	nav {
		@include float(right);
		ul {
			list-style-type: none;

			li {
				@include float(left, 40px);

				a {
					color: $font-color;
					text-decoration: none;
				}
			}
			li.clearfix {
				float: none;
				margin: 0;
			}
		}
	}
}

@media screen and (max-width: 540px) {
	#header {
		h1 {
			@include fontSize(24px, 16px);
			float: none;
			text-align: center;
			margin: 0 auto;
			width: 100%;
		}
		nav {
			float: none;
			margin: 0 auto;
			width: auto;
			min-width: 300px;
			ul {
				li {
					@include float(left, 2.5%);
					width: 20%;
					margin-right: 2.5%;
				}
			}
		}
	}
}