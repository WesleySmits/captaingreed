@import "variables";
@import "mixins";
@import "compass";

/* Global CSS */
html, body {
	width: 100%;
	font-family: helvetica, arial, times, serif;
	font-size: 100%;
}

body {
  @media screen and (min-width: $break-small) {
    background: url('<%= asset_path('backgrounds/small-background.png') %>') no-repeat;
    background-size:100%;
  }
  @media screen and (min-width: $break-medium) {
    background: url('<%= asset_path('backgrounds/medium-background.png') %>') no-repeat;
    background-size:100%;
  }
  @media screen and (min-width: $break-large) {
    background: url('<%= asset_path('backgrounds/large-background.png') %>') no-repeat;
    background-size:100%;
  }
  @media screen and (min-width: $break-xlarge) {
  	background: url(<%= asset_path 'backgrounds/xlarge-background.png' %>) no-repeat;
  	background-size:100%;
  }
}

img {
	max-width: 100%;
}

.wrapper {
	width: 100%;
	max-width: 1200px;
	margin: 25px auto;
}

.container {
	width: 80%;
	margin: 0 auto; 
}

.clearfix {
	float: none;
	clear: both;
}

.downloadButton {
	background: green;
	width: 230px;
	height: 65px;
	background: url(<%= asset_path 'backgrounds/download_button.png' %>) no-repeat;
	background-size:100%;
}
#main {
	width: 100%;

	section {
		border: 1px solid black;
		overflow: hidden;
		position: relative;


		header h1 {
			text-align: center;
			@include fontSize(32px, 16px);
		}
	}
}